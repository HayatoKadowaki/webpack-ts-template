{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "target": "ES5", // TSはECMAScript 5に変換
    "module": "ES2015", // TSのモジュールはES Modulesとして出力
    "strict": true,
    "moduleResolution": "Node",
    "paths": {
      "@styles/*": ["./src/assets/styles/*"],
      "@scripts/*": ["./src/assets/scripts/*"]
    }
  }
}
